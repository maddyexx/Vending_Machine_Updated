<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="215dp"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/item_confirm_button"
            android:text="Take Out"
            android:background="@drawable/top_button"
            android:layout_marginTop="-1dp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="-7dp"
            android:textSize="20sp"
            android:textColor="#C02425"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="215dp"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/logout"
            android:id="@+id/logout"
            android:layout_marginLeft="-8dp"
            android:textColor="#C02425"
            android:textSize="20sp"
            android:background="@drawable/button_left_line"
            android:textStyle="bold|italic"
            android:layout_marginTop="-1dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/user_name"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">
        <EditText
            android:id="@+id/balance_amount_input"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:hint="Enter Amount To Add"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:textSize="16dp"
            android:background="@drawable/custom_input_bg"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_btn"
            android:text="Enter"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:id="@+id/amount_enter"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_type"
        android:textStyle="italic"
        android:layout_marginStart="60dp"
        android:layout_marginTop="190dp"
        android:textColor="@color/white"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: "
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="220dp"
        android:textColor="@color/white"
        android:gravity="left"
        android:padding="2dp"
        android:layout_marginStart="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:text=""
        android:background="@drawable/white_bg"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginTop="230dp"
        android:layout_toEndOf="@id/balance"
        />
    <ListView
        android:id="@+id/custom_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:layout_marginTop="20dp"
        android:dividerHeight="2dp"
        android:layout_below="@id/balance"
        android:listSelector="@color/grey"
        android:scrollbarAlwaysDrawVerticalTrack="true"

        />
