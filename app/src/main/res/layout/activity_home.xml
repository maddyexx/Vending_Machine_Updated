<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="190dp"
        android:layout_marginTop="10dp"
        android:id="@+id/user_name"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/balance_amount_input"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:hint="Enter Amount To Add"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:textSize="16dp"
            android:background="@drawable/custom_input_bg"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_btn"
            android:text="Enter"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:id="@+id/amount_enter"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_type"
        android:textStyle="italic"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: "
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:textColor="@color/white"
        android:gravity="left"
        android:padding="2dp"
        android:layout_marginStart="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:text=""
        android:background="@drawable/img_radius"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@id/balance"
        />
    <ListView
        android:id="@+id/custom_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:layout_marginTop="20dp"
        android:dividerHeight="2dp"
        android:layout_below="@id/balance"
        android:listSelector="@color/grey"
        android:scrollbarAlwaysDrawVerticalTrack="true"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:id="@+id/logout"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:background="@drawable/custom_btn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_confirm_button"
        android:text="Take Out"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/custom_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="20dp"
        />
</RelativeLayout>